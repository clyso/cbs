[Unit]
Description=CBSD Init Container Services for %i on deployment '{{deployment}}'
After=network.target local-fs.target cbsd-network@{{deployment}}
Wants=network-online.target local-fs.target cbsd-network@{{deployment}}
PartOf=cbsd-{{deployment}}.target
Before=cbsd-{{deployment}}.target


[Service]
ExecStart=/bin/bash {{cbsd_data}}/cbsd-ctr.sh start %p %i -c {{cbsd_config}} -d {{cbsd_data}}
ExecStop=/bin/bash {{cbsd_data}}/cbsd-ctr.sh stop %p %i -c {{cbsd_config}} -d {{cbsd_data}}
Restart=on-failure
RestartSec=10s
Type=forking

[Install]
WantedBy=cbsd-{{deployment}}.target
